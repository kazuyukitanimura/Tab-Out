<!DOCTYPE html>

<!--
  Tab-Out by Asuka for Node Knockout 2011
-->

<head>
	<title>Tab-Out</title>
	<meta charset='utf-8'>
	<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.2.min.js"></script>
	<script>
		myId = "<%= everyauth.user.twit.screenName %>";
	</script>
	<script src="/javascripts/scripts.js"></script>
	<link href="http://fonts.googleapis.com/css?family=Bevan&subset=latin" rel="stylesheet" type="text/css">
	<link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
</head>

<body>
	
	<header class="main">
	    <h2>Tab-Out</h2>
      <div class="username">Hello, <%= everyauth.user.twit.name %>! <img src="<%= everyauth.user.twit.profileImageUrl %>"/></div>
	</header>

    <section id="yourGroup">
		<h3>Your Group</h3>
		
		<div id="groups">
			the exiting groups here
			
			<ol id="tabGroupList" class="tab-group">
				<!-- generated group list here. -->
			</ol>
			
		</div>
		
	</section>
	
	<section id="createGroup">
		<h3>Create a new group</h3>
		
		<div id="createGroupname">
			<form action="#"> 
				<label for="name">Group Name:</label>
				<input id="groupname" type="text" name="groupname" value="" placeholder="Road Trip" />
			</form>
			
			<input type="submit" id="createGroupButton" value="Create">
		</div>
		
		<div id="addNumber" style="display:none">
			<p>How many people you want to split the tab with?</p>
			<input id="numPeople" type="number" min="0" value="" placeholder="3" />
		</div>
		
		<div id="addPeople" style="display:none">
			<div id="memberInputs">
			</div>
		</div>
		
	</section>
	
	
	<div id="modalDialogCreate">
	    <div id="dialog" class="dialog">
	        <!--<div style="padding-bottom: 1em"><a href="#" class="close-dialog-button">Close</a></div>-->
			<div class="dialog-text-container">
				
			</div>
	    </div>
	    <div id="scrim" class="scrim"></div>
	</div>
	
	<footer>
		
	</footer>
</body>
</html>
